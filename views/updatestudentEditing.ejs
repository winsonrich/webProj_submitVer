<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
    <style> body {background-color: rgb(235, 228, 228); }</style>
    <title>Update Students</title>
</head>
<body>
    <div class="jumbotron">
        <div class="container"> 
            <h1>Update Students</h1>
            <br>
            <br>
            <br>
            <button class="btn btn-info"><a style="color: white;" href="menu">Back to Menu  </a>
            <span class="glyphicon glyphicon-home"></span></button>
            <br>
        </div>
    </div>

    <div class="container"> 
        <form action="/updatestudent/update" method="post" enctype="multipart/form-data">
        <% for(let x of list2){ %>
            <div>
                <label> Name: </label>
                <p> <input type="text" name="sname" class="form=control" style="width:30%;" value='<%= x["sname"]%>'/></p>
            </div>
            <br>
            <div>
                <label>Date of Birth: </label>
                <p><input type="date" value="2015-01-01" name="dob" value='<%= x["dob"]%>'/></p> 
            </div>
            <br>
            <div>
                <label>Gender: </label>
                <% (x["gender"]=="F")?F.checked=true %>
                <% (x["gender"]=="M")?M.checked=true %>
                <% (x["gender"]=="X")?X.checked=true %>
                <p> <input type="radio" id="F" name="gender" value="F" />
                    <label for="Female">Female</label>
                    <input type="radio" id="M" name="gender" value="M" />
                    <label for="male">Male</label>
                    <input type="radio" id="X" name="gender" value="X" />
                    <label for="X">X</label>
                </p>
            </div>
            <br>
            <div>
                <label for="class"> Class: </label>
                <% (x["clid"]=="1A")?class.option[1A].selected = 'selected' %>
                <% (x["clid"]=="M")?M.checked=true %>
                <% (x["clid"]=="X")?X.checked=true %>
                <select name="clid" size="1" id="class" class="form-control" style="width:20%;">
                    <option>Please select</option>
                    <option value="1A">1A</option>
                    <option value="1B">1B</option>
                    <option value="1C">1C</option>
                    <option value="2A">2A</option>
                    <option value="2B">2B</option>
                    <option value="2C">2C</option>
                </select>
            </div>
            <br>
            <div>
                <label for="photo"> Photo: </label>
                <input type="file" name="photo" id="photo">
            </div>
            <br>
            <input type="submit" class="btn btn-primary" value="Save" />
        <%}%>
        </form>
    </div>
</body>